<%= form_for(feedback) do |f| %>
  <% if feedback.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

      <ul>
      <% feedback.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label "Would You Recomend This Product To A Friend? (Yes or No?)"%>
    <%= f.check_box :recommend? %> " ‚Üê Click Here For Yes!
  </div>
    <br><br>
  <div class="field">
    <%= f.label "How Likely Would You Recomend This Product To A Friend (1 to 10)"  %>
