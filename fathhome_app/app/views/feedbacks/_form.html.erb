    <%= f.label "How Clean Do They Feel? (1 to 10)" %>
    No Difference - 1  <%= f.range_field :clean, :min=>1, :max=>10, :class=>"slide", :id=>"slider1" %> 10 - WOW Super Clean!
  </div>

  <div class="field">
    <%= f.label :user_id %>
    <%= f.text_field :user_id %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
